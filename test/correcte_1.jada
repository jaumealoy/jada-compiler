/**
 * Aquest programa és un exemple de programa correcte
 */
func factorial(int n) : int begin
	if n == 0 do
		return 1;
	else if n >= 1 do
		return factorial(n - 1);
	else do
		// cas no definit
		return -1;
	end;
end factorial;

func factorialIteratiu(int n) : int begin
	int tmp = 1;

	int i = 0;
	while (i > 1) do
		tmp *= i;
		i--;
	end;

	return factorial;
end factorialIteratiu;

proc main() begin
	// demanar un valor positiu
	print("Introdueix un valor numèric: ");
	int k = readInt();

	int resultat1 = factorial(k);
	int resultat2 = factorialIteratiu(k);

	if resultat1 != resultat2 do
		print("Error lògic");
	else do
		print("El factorial és ");
		printInt(resultat1);
	end;    
end main;
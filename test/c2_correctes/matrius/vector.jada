func creaVector(int n) : int[] begin
    int[] vector = new int[n];

    for (int i = 0; i < n; i++) do
        print("vector[");
        printInt(i);
        print("] = ");
        vector[i] = readInt();
    end;

    return vector;
end creaVector;

proc pintaVector(int[] v, int n) begin
    int i = 0;
    
    printChar('(');    
    while(i < (n - 1)) do
        printInt(v[i]);
        printChar(',');    
        printChar(' ');
        i++; 
    end;
    printInt(v[n - 1]);
    printChar(')');
    printChar('\n');
end pintaVector;

func dot(int[] v1, int[] v2, int n) : int begin
    int resultat = 0;

    for(int i = 0; i < n; i++) do
        resultat += v1[i] * v2[i];
    end;


    return resultat;
end dot;

func add(int[] v1, int[] v2, int n) : int[] begin
    int[] v = new int[n];

    for (int i = 0; i < n; i++) do
        v[i] = v1[i] + v2[i];
    end;

    return v;
end add;

proc main() begin
    print("Introdueix la mida del vector: ");
    int n = readInt();

    int[] v1 = creaVector(n);
    int[] v2 = creaVector(n);

    print("Vector 1: ");
    pintaVector(v1, n);

    print("Vector 2: ");
    pintaVector(v2, n);

    print("v1 Â· v2 = ");
    printInt(dot(v1, v2, n));
    printChar('\n');

    print("v1 + v2 = ");
    pintaVector(add(v1, v2, n), n);
end main;
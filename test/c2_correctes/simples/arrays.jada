const int LLETRES = 5;

const char[LLETRES] vocals = char{'a', 'e', 'i', 'o', 'u'};

func cerca(char[LLETRES][2] array, char valor) : char begin  
    int i = 0;
    while ((i < LLETRES) and (array[i][0] != valor)) do
        ++i;
    end;

    if i == LLETRES do
        return '\0';
    else do
        return array[i][1];
    end;    
end cerca;

